{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/src"
    },
    {
      "source": "/(.*)",
      "destination": "/src"
    }
  ],

  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["src/**"] }
    }
  ]
}
